{
  "name": "fise-frontend",
  "description": "Frontend server for FISE",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom --passWithNoTests",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/volto/src/i18n.js",
    "develop": "mrdeveloper --config=jsconfig.json --no-config --output=addons"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.css$": "jest-css-modules",
      "^.+\\.scss$": "jest-css-modules",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(jpg)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/volto/jest-svgsystem-transform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!@plone/volto).+\\.js$"
    ],
    "moduleNameMapper": {
      "@plone/volto/(.*)$": "<rootDir>/node_modules/@plone/volto/src/$1",
      "@package/(.*)$": "<rootDir>/src/$1",
      "~/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "@plone/volto/test-setup.js"
    ]
  },
  "customizationPaths": [
    "src/customizations/volto/"
  ],
  "addonsCustomizationPath": "src/customizations",
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-idiomatic-order",
      "./node_modules/prettier-stylelint/config.js"
    ]
  },
  "engines": {
    "node": "^8 || ^10"
  },
  "bundlesize": [
    {
      "path": "build/public/static/js/*.js",
      "maxSize": "680kB"
    }
  ],
  "bundlewatch": {
    "files": [
      {
        "path": "build/public/static/js/*.js",
        "maxSize": "680kB"
      }
    ]
  },
  "dependencies": {
    "@blueprintjs/core": "^3.18.0",
    "@blueprintjs/icons": "^3.10.0",
    "@plone/volto": "github:tiberiuichim/volto#kitchen_sink",
    "react": "^16.12.0",
    "react-image-gallery": "^0.9.1",
    "react-loadable": "^5.5.0",
    "react-semantic-ui-range": "^0.7.0",
    "react-slick": "^0.24.0",
    "react-stickynode": "^2.1.1",
    "react-toastify": "^5.3.2",
    "semantic-ui-css": "^2.4.1",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "cypress": "^3.6",
    "eslint": "^5.16.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "mr-developer": "^1.4.0",
    "postcss-overrides": "3.1.4",
    "prettier": "1.17.0",
    "prettier-eslint": "^9.0.0",
    "prettier-stylelint": "0.4.2"
  }
}
