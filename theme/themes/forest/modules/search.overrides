.tick {
    line {
        stroke: #F0F2F8;
    }
}

.x.axis {
    .tick {
        opacity: 0;

        &:nth-child(8n) {
            opacity: 1;

            text {
                opacity: 0;
            }
        }

        &:nth-child(2),
        &:last-child {
            opacity: 1;

            line {
                opacity: 0;
            }

            text {
                opacity: 1;
            }
        }
    }
}

.y.axis {
    .tick {
        &:nth-child(2) {
            opacity: 0;
        }
    }
}

.axis {
    .domain {
        stroke: #000;
    }
}

.bar {
    pointer-events: all;
}

.line {
    fill: none;
    // stroke: #AEABFB;
    stroke-width: 3;
}

.area {
    fill: #EFEFEF;
}

