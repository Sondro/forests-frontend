    }
}

.filters-container {
    width: 33.33%;
    margin: 16px 0;

    .filters-toggle {
        cursor: pointer;
        position: absolute;
        top: 0;
        right: 110%;
        background: white;
        border: 1px solid #225511;
        padding: 7px;
        border-radius: 5px;
        color: #225511;
        font-weight: 600;
        width: 80px;
    }

    .filters-head {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        border-bottom: 1px solid #D4D4D5;
        padding-bottom: 12px;
    }

    .header {
        margin: 0;
        color: #555555;
    }

    .clear-filters {
        margin: 0;
        color: #CC4400;
        cursor: pointer;
        font-weight: 400;
    }

    .filters-area {
        margin-top: 15px;
        border-bottom: 1px solid #D4D4D5;
        padding-bottom: 25px;
    }

    .checkbox-area {
        display: flex;
    }

    .checkbox-area:not(.collection) {
        flex-wrap: wrap;

        .checkbox {
            min-width: 150px;
        }
    }

    .checkbox-column {
        display: flex;
        flex-direction: column;
        margin-right: 10px;
    }

    .checkbox {
        margin-top: 3px;
        margin-bottom: 3px;
    }

    .multiple-select {
        background-color: #F9F9F9 !important;
        padding: 10px !important;
    }

    .collection {
        background: #F9F9F9;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 5px;
        width: 70%;
    }

    .slider-labels {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    @media only screen and (max-width: 1200px) {
        width: 50%;
        padding: 25px;
        position: absolute;
        background: white;
        right: 0;
        transform: translateX(110%);
        transition: transform 300ms;
        box-shadow: -1px 1px 4px 5px #00000026;

    }

    @media only screen and (max-width: 550px) {

        width: 65%;
    }

    @media only screen and (min-width: 1200px) {
        .filters-toggle {
            display: none;
        }
    }
}

.countries {
    h4 {
        color: #545454;
    }

    a {
        color: #303030;
        font-size: 0.9em;

        &:hover {
            color: #CD4200;
            text-decoration: underline;
            cursor: pointer;
        }

    }

    span.count {
        color: #9A9A9A;
        font-size: 0.7em;
    }

    .countries-poll {
        display: flex;
        flex-wrap: wrap;
    }

    .countries-poll .country {
        width: 25%;
        margin: 2px 0;

        @media screen and (max-width:900px) {
            flex-basis: 50%;
        }
    }
}

