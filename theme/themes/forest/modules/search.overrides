.search-modal {
    .modal-header {
        font-size: 20px;
        color: #005555;
    }

    .modal-content {
        display: contents !important;

        .modal-description {
            padding: 0 1.5rem 1.25rem 1.5rem;
        }
    }

    .close-modal {
        cursor: pointer;
    }
}

.search-page-content .ui.compact.menu {
    border: none;

    .item {
        border-radius: 1px;
        border: 1px solid #C7D5D8;
        &::before {
            display: none;
        }
        &:nth-child(even) {
            border-left: none;
            border-right: none;
        }
        &:last-child {
            border-right: 1px solid #C7D5D8;
        }
    }

    @media only screen and (max-width: 900px) {
        border: 1px solid #C7D5D8 !important;
        margin: 1rem;

        .item {
            border: none;
            &:last-child {
                border-bottom: none;
                border-right: none;
            }
            &:nth-child(even) {
                border-top: 1px solid #C7D5D8;
                border-bottom: 1px solid #C7D5D8;
            }
            &:last-child {
                border-bottom: none;
            }
        }
    }
}