/*******************************
         Theme Overrides
*******************************/


.search-page {
    h4 {
        margin: 0;
    }

    .results-bar {
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        flex-wrap: wrap;
    }

    .max-results {
        display: flex;
        align-items: center;
    }

    .max-results-text {
        font-size: @standardFont;
        color: #555555;
        margin: 0;

    }

    .max-results-select {
        margin-left: 10px;
        font-size: @standardFont;
        background-color: #F5F5F5;
        padding: 5px;
        border-radius: 5px;
        border: none;
    }

    .results-count {
        font-size: @standardFont;
        color: #999999;
    }

    span.divider {
        width: 1px;
        height: 0.6em;
        background: #E7E7E7;
        margin: 0 0.5em;
    }

    .block-content {
        display: flex;
        justify-content: space-between;
    }

    .block-item {
        display: flex;
        flex-direction: column;
        flex: 0 0 100%;


    }

    .download-area {
        display: flex;
        align-self: flex-end;
        justify-content: center;
        align-items: center;
    }

    .download-button {
        display: flex;
        align-items: center;
        border: 1px solid #DDDDDD;
        background-color: #ffffff;
        border-radius: 7px;
        padding: 7px;
    }

    .download-text {
        font-size: @standardFont;
        margin: 0;

    }

    .file-size {
        font-size: @standardFont;
        color: #555555
    }

    .block-headline {
        font-size: 20px;
        color: #005555;
        font-weight: 500;
        cursor: pointer;
    }

    .meta-data {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-top: 9px;
        margin-bottom: 8px;
    }

    .format-icon {
        background-color: #005555;
        width: 18px;
        height: 18px;
        border-radius: 3px;
        font-size: 9px;
        color: white;
        font-weight: 800;
        display: flex;
        align-items: center;
    }

    .text-tab {
        margin-left: 6px;
        margin-right: 6px;
    }

    .format-text {
        font-size: @standardFont;
        color: #999999;
    }

    .format-type {
        font-size: @standardFont;
    }

    .description {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;

    }

    .tag-tab {
        margin-top: 15px;
        margin-bottom: 66px;
    }

    .result-tag {
        font-size: @standardFont;
        color: #CC4400;
    }

    .result-date {
        font-size: @standardFont;
        color: #999999;
    }

    .ui.container {
        overflow: hidden;
        position: relative;
    }
}

.search-page-content {
    // display: grid;
    // position: relative;
    // grid-template-columns: 2fr 1fr;
    // grid-template-rows: max-content;
    // grid-template-areas:
    //     "tabs filters";
    // column-gap: 4em;

    display: flex;
    flex-flow: row;
    justify-content: space-between;

    .multiselect-container {
        // grid-area: multiselect;
        position: absolute;
        top: -10em;
        width: 60%;
        display: flex;
        flex-flow: row;
        align-items: center;
    }

    

    .tabs-container {
        // grid-area: tabs;
        flex: 1;
        margin-right: 100px;



        a.active {
            border-radius: 3px !important;
            background: #CC4400 !important;
            color: white !important;
        }

        .menu {
            box-shadow: none !important;
        }

        @media only screen and (max-width: 900px) {
