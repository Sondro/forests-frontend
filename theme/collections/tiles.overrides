.tile-container {
  padding: 1rem;
}

.default-tile {
  border: 1px solid black;
}

.drop-shadow-tile {
  -webkit-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.5);
  -moz-box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.5);
  box-shadow: 2px 2px 5px 0px rgba(0,0,0,0.5);
}

.tile-box {
  width: 60px;
  height: 60px;

  &.preview {
    display: inline-block;
    padding: 0.3rem;
    margin: 1rem;
  }
}
